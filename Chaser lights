int timewait = 1000; 

void setup() { 

  . 

  pinMode(9, OUTPUT); 

  pinMode(8,OUTPUT); 

  pinMode(7,OUTPUT); 

} 

 
 
 



void loop() { 

  digitalWrite(9,HIGH); 

  delay(timewait);                      

  digitalWrite(8,HIGH); 

  delay(timewait);  

  digitalWrite(7,HIGH); 

  delay(timewait); 

  digitalWrite(9,LOW); 

  delay(timewait); 

  digitalWrite(8,LOW); 

  delay(timewait); 

  digitalWrite(7,LOW); 

  delay(timewait); 

} 
